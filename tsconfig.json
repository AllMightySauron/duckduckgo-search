{
  "compilerOptions": {
    "target": "ES2021",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "dist",
    "rootDir": "src",
    "resolveJsonModule": true,
    "declaration": true,
    "inlineSources": true,
    "sourceMap": true,
    "lib": ["ES2021", "DOM"]
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules", "test", "scripts"]
}
